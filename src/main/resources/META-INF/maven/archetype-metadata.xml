<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="java-starter"
        xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <requiredProperties>
    <requiredProperty key="groupId">
      <defaultValue>com.example</defaultValue>
      <validationRegex>^[a-z][a-z0-9_]*(\.[a-z0-9_]+)+[0-9a-z_]$</validationRegex>
    </requiredProperty>
    <requiredProperty key="artifactId">
      <defaultValue>myapp</defaultValue>
      <validationRegex>^[a-z][a-z0-9_]*(\.[a-z0-9_]+)+[0-9a-z_]$</validationRegex>
    </requiredProperty>
    <requiredProperty key="version">
      <defaultValue>1.0.0</defaultValue>
      <validationRegex>^[0-9]+\.[0-9]+(\.[0-9]+)?$</validationRegex>
    </requiredProperty>
    <requiredProperty key="javaPreviewFeatures">
      <defaultValue>yes</defaultValue>
      <validationRegex>^yes$|^y$|^no$|^n$</validationRegex>
    </requiredProperty>
    <requiredProperty key="jdkVersion">
      <defaultValue>19</defaultValue>
      <validationRegex>([89]|1[0-9]|20)</validationRegex>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>.gitkeep</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/test/resources</directory>
      <includes>
        <include>.gitkeep</include>
      </includes>
    </fileSet>
    <fileSet filtered="true">
      <directory />
      <includes>
        <include>.gitignore</include>
        <include>README.md</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
